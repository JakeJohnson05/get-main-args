{
  "name": "get-main-args",
  "version": "1.0.0",
  "description": "A tool to get the main command-line arguments to use with Yargs",
  "main": "./lib/get-main-args.js",
  "scripts": {
    "start": "ts-node src/get-main-args.ts",
    "create": "npm run build && node lib/get-main-args.js",
    "build": "tsc -p .",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "test": "xo && ava && tsd",
    "xoFix": "xo --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JakeJohnson05/get-main-args.git"
  },
  "author": "Jake Johnson (https://jakejohnson.pro)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JakeJohnson05/get-main-args/issues"
  },
  "homepage": "https://github.com/JakeJohnson05/get-main-args#readme",
  "dependencies": {
    "@types/node": "^14.11.8"
  },
  "devDependencies": {
    "ava": "^3.13.0",
    "ts-node": "^9.0.0",
    "tsd": "^0.13.1",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3",
    "xo": "^0.33.1"
  },
  "xo": {
    "rules": {
      "import/no-unassigned-import": "warn"
    }
  }
}
